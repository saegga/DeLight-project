<resources>

    <style name="AppTheme" parent="MaterialDrawerTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="material_drawer_selected_text">@color/white</item>
        <item name="material_drawer_selected">@color/colorAccent</item>
        <item name="material_drawer_background">@color/mainBackground</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TimeTextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/mainBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/mainBackground</item>
        <item name="colorControlNormal">@color/mainBackground</item>
        <item name="colorControlActivated">@color/mainBackground</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/mainBackground</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">2dp</item>
        <item name="tabPaddingEnd">2dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/mainBackground</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/mainBackground</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/main_button_selector</item>
    </style>


</resources>
